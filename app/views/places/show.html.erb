<h1 class="mt-5"><%= @place["name"] %></h1>


<h2>My Entries</h2>
  <div class="container">
    <div class="row">
<% for entry in @entries %>
      <div class="col-lg-4">
        <h3><%= entry["title"] %></h3>
        <% if entry.uploaded_image.attached? %>
          <img src="<%= url_for(entry.uploaded_image) %>" class="img-fluid">
        <% else %>
          <img src="<%= entry["image"] %>" class="img-fluid">
        <% end %>
          <h4><%= entry["occurred_on"] %></h4>
          <p><%= entry["description"] %></p>
      </div>
<% end %>
  </div>
    </div>


<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>" class="link-dark">New Entry</a>
</p>

<p>
  <a href="/places" class="link-dark">Back to All Places</a>
</p>